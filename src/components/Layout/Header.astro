---
import Logo from "@/assets/svg/logo.svg";
import Navbar from "@/components/Layout/Navbar/Navbar.jsx";
import Hamburger from "@/components/Layout/Navbar/Hamburger.jsx";
---

<header class="fixed flex w-full items-center justify-between px-6">
  <a
    href="/"
    class="bg-orange-3/75 z-10 flex max-w-7xl rounded-lg px-4 py-2 backdrop-blur-sm transition-all duration-300 hover:scale-110 md:px-6 md:py-3"
    aria-label="Home"
  >
    <Logo class="fill-orange-9 h-6 md:h-7" /></a
  >
  <Navbar client:load />
  <Hamburger client:load transition:persist />
</header>
