---
import Logo from "@/assets/svg/logo.svg";
import Navbar from "@/components/Navbar/Navbar.jsx";
import Hamburger from "@/components/Navbar/Hamburger.jsx";
---

<header class="flex justify-between items-center fixed w-full px-6">
  <a
    href="/"
    class="flex max-w-7xl px-4 py-2 rounded-lg bg-orange-3/75 z-10 backdrop-blur-sm md:px-6 md:py-3"
    aria-label="Home"
  >
    <Logo class="fill-orange-9 h-6 md:h-7" /></a
  >
  <Navbar client:load />
  <Hamburger client:load transition:persist />
</header>
